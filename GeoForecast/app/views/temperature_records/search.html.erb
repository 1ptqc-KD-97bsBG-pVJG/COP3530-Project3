<div class="container mt-5">
  <h1 class="text-center mb-4">Search Results</h1>

  <% if @records.present? %>
    <p>Displaying first <%= [100, @records.count].min %> records out of <%= @records.count %> found.</p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Temperature</th>
          <th>Recorded At</th>
        </tr>
      </thead>
      <tbody>
        <% @records.first(100).each do |record| %>
          <tr>
            <td><%= record.location.latitude %></td>
            <td><%= record.location.longitude %></td>
            <td><%= record.outside_temp %>Â°C</td>
            <td><%= record.recorded_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No records found. Please adjust your search criteria and try again.</p>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to 'New Search', root_path, class: "btn btn-secondary" %>
  </div>
</div>
