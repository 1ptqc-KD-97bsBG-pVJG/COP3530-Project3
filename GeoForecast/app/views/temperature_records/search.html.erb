<div class="container mt-5">
  <h1 class="text-center mb-4">Search Results</h1>

  <% if @records.present? %>
    <p>Displaying first <%= [100, @records.count].min %> records out of <%= @records.count %> found.</p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Temperature</th>
          <th>Recorded At</th>
        </tr>
      </thead>
      <tbody>
        <% @records.first(10).each do |record| %>
          <tr>
            <td><%= record.location.latitude %></td>
            <td><%= record.location.longitude %></td>
            <td><%= record.outside_temp %>°C</td>
            <td><%= record.recorded_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No records found. Please adjust your search criteria and try again.</p>
  <% end %>

  <div id="map" style="height: 400px;"></div>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        <% if @records.present? %>
        var records = <%= @records.first(1000).map { |r| { lat: r.location.latitude, lng: r.location.longitude, temp: r.outside_temp, recorded_at: r.recorded_at.strftime('%Y-%m-%d %H:%M:%S') } }.to_json.html_safe %>;

        if (records.length > 0) {
          var map = L.map('map');

          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
          }).addTo(map);

          var bounds = new L.LatLngBounds();

          records.forEach(function(record) {
            var marker = L.marker([record.lat, record.lng]).addTo(map)
              .bindPopup("<b>Temperature:</b> " + record.temp + "°C<br/><b>Recorded At:</b> " + record.recorded_at);
            bounds.extend(marker.getLatLng());
          });

          map.fitBounds(bounds, { padding: [50, 50] }); // Adjusts view to include all markers with padding
        } else {
          map.setView([37.8, -96], 4); // Default view if no records are present
        }
      });
    </script>
    <% end %>

  <div class="text-center mt-4">
    <%= link_to 'New Search', root_path, class: "btn btn-secondary" %>
  </div>
</div>
